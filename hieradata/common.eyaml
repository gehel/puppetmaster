---
firewall:              true
firewall_tool:         'iptables'
firewall_destination:  '0/0'
iptables_block_policy: 'accept'

monitor: true
monitor_tool:
    - 'nagios'
    - 'puppi'

puppi:          true
puppi_version : 2

puppet_allow:
  - '*.eu-west-1.compute.internal'
  - '*.ledcom.ch'
  - '127.0.0.1'
puppet_server:      'puppet.aws.ledcom.ch'
puppet_environment: 'production'
puppet_runinterval: 3600

